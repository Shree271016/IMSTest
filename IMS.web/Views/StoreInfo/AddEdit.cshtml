@model IMS.Models.Entity.StoreInfo

<form method="post" asp-action="AddEdit">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="StoreName"></label>
        <input asp-for="StoreName" class="form-control">
        <div>
        <span class="text-danger pt-3 " asp-validation-for="StoreName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control">
        <span class="text-danger " asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="phoneNumber"></label>
        <input type="text" asp-for="phoneNumber" class="form-control">
        <span class="text-danger " asp-validation-for="phoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistratinNo"></label>
        <input type="number" asp-for="RegistratinNo" class="form-control">
        <span class="text-danger " asp-validation-for="RegistratinNo"></span>
    </div>

    <div class="form-group">
        <label asp-for="PanNo"></label>
        <input type="number" asp-for="PanNo" class="form-control">
        <span class="text-danger " asp-validation-for="PanNo"></span>
    </div>

    <div class="col-6">
        <div class="form-group">
            <label class="check-box">
                <input type="checkbox" id="IsActive" name="IsActive" value="true" />
                <label asp-for="IsActive">Is Active</label> <br />
            </label>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <a class="btn mt-2 btn-secondary" asp-action="Index">Back to List</a>
        </div>

        @if (Model.Id > 0)
        {
            <div class="col-6">
                <button class="btn mt-2 btn-primary  float-end" type="submit">Update</button>
            </div>
        }
        else
        {
            <div class="col-6">
                <button class="btn mt-2 btn-primary  float-end" type="submit">Create</button>
            </div>
        }
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}